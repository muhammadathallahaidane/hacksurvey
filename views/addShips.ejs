<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
</head>
<body class="bg-light">

    <div class="container mt-5">
      <h2 class="text-center mb-4">Input New Survey Request</h2>
  
      <div class="card shadow">
        <div class="card-body">
  
          <% if (error && Array.isArray(error)) { %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% error.forEach(el => { %>
                  <li><%= el %></li>
                <% }) %>
              </ul>
            </div>
          <% } %>
  
          <form action="/profile/<%= ProfileId %>/ships/add" method="post">
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="shipName">Ship Name</label>
                <input type="text" class="form-control" id="shipName" name="name" placeholder="e.g. Orion Star">
              </div>
              <div class="form-group col-md-6">
                <label for="IMONumber">IMO Number</label>
                <input type="number" class="form-control" id="IMONumber" name="IMONumber" placeholder="e.g. 1234567">
              </div>
            </div>
  
            <div class="form-group">
              <label for="shipType">Ship Type</label>
              <select class="custom-select" id="shipType" name="shipType">
                <option selected disabled>Select Ship Type</option>
                <% let type = ['Cargo', 'Crew Boat', 'Tanker', 'Tug Boat'] %>
                <% type.forEach(el => { %>
                  <option value="<%= el %>"><%= el %></option>
                <% }) %>
              </select>
            </div>
  
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="yearBuilt">Year Built</label>
                <input type="date" class="form-control" id="yearBuilt" name="yearBuilt">
              </div>
              <div class="form-group col-md-6">
                <label for="portRegistry">Port of Registry</label>
                <input type="text" class="form-control" id="portRegistry" name="portRegistry" placeholder="e.g. Jakarta">
              </div>
            </div>
  
            <div class="form-group">
              <label for="imageUrl">Image URL</label>
              <input type="text" class="form-control" id="imageUrl" name="imageUrl" placeholder="https://example.com/ship.jpg">
            </div>
  
            <div class="form-group">
              <label for="surveyType">Survey Type</label>
              <select class="custom-select" id="surveyType" name="surveyType">
                <option selected disabled>Select Survey Type</option>
                <% surveys.forEach(el => { %>
                  <option value="<%= el.id %>"><%= el.type %></option>
                <% }) %>
              </select>
            </div>
  
            <div class="text-right">
              <button type="submit" class="btn btn-primary">Submit Survey Request</button>
            </div>
          </form>
  
        </div>
      </div>
    </div>
  </body>
  </html>